{
  "manifest_version": 3,
  "name": "Image Processing Extension",
  "version": "1.0",
  "description": "An extension to process images on a webpage.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.bundle.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/images/16.png",
      "48": "src/images/48.png",
      "128": "src/images/128.png"
    }
  }
}